@model IEnumerable<TheBestRecipes.ViewModels.RecipeViewModel>
@{
	ViewBag.Title = "Onze verzamelde recepten";
}

<div class="row">
	<div class="col-md-6">
		<h1>The Best Recipes</h1>
	</div>
</div>

<div class="container">
	<div id="products" class="row equal">
		@foreach (var item in Model)
		{
			<div class="item  col-xs-4 col-lg-4">
				<div class="thumbnail">
					<img class="group list-group-image" src="~/images/@Html.DisplayFor(modelItem => item.Image)" alt="" />
					<div class="caption">
						<h4 class="group inner list-group-item-heading">
							@Html.DisplayFor(modelItem => item.Name)
						</h4>
					</div>
				</div>
			</div>
		}
	</div>
</div>