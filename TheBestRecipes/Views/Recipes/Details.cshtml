@model TheBestRecipes.Models.Recipe

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>@Html.DisplayNameFor(model => model.Title)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NumberOfPersons)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumberOfPersons)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Source)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Source)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd>
			<img class="group list-group-image" src="~/images/@Html.DisplayFor(model => model.ImagePath)" alt="" />
        </dd>
    </dl>
</div>
<div>
	<h4>Bereiden</h4>
	<hr />
	<dl class="dl-horizontal">
@foreach (var step in Model.RecipeSteps)
{

		<dt>
			@Html.DisplayNameFor(stepItem => step.Step.Index)
		</dt>
		<dd>
			@Html.DisplayFor(stepItem => step.Step.Description)
		</dd>
}
	</dl>

</div>
<div>
    <a asp-controller="Recipes" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
	<a asp-controller="Recipes" asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
    <a asp-controller="Recipes" asp-action="Index">Back to List</a>
</div>
